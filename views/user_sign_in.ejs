<link rel="stylesheet" type="text/css" href="/CSS/user_sign_in.css">

<div id="sign-in-body">

    
    <div class="sign-in-container">
        <h1 id="log-in-heading">Log In</h1>
        <form action="/users/create-session" method= "POST">
            <input type="email" name="email" placeholder="Enter Email" required>
            <input type="password" name="password" placeholder="Enter Password" required>
            <p class="forgot-password">
                <a href="/users/render-confirm-email">Forgot Password?</a>
            </p>
            <button class="log-in-btn" type="submit" >Log In</button>
        </form>
        
        <div class="google-sign-in-container">
            <a id="google-sign-in" href="/users/auth/google"><button class="google-sign-in-btn"><img src="/Images/google-image.png"><p>Sign in with google</p><p></p></button></button></a>
        </div>

        <a id="dont" href="/users/sign-up">Don't have an account?</a>
        
    </div>
    


</div>